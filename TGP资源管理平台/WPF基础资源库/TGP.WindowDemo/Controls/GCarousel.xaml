            </Storyboard>
        </ControlTemplate.Resources>
        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="#FF6ADE6A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="79*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="58*"/>
                <RowDefinition Height="30.001"/>
            </Grid.RowDefinitions>
			<Canvas x:Name="PART_Inner" Grid.ColumnSpan="3" Margin="0" Grid.RowSpan="4" Width="Auto" Height="Auto" />
			<Button x:Name="PART_Left" Content="左" Margin="0" VerticalAlignment="Stretch" Grid.Row="1" Width="Auto"/>
            <Button x:Name="PART_Right" Content="右" Margin="0" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" Width="Auto"/>
            <Border Height="Auto" Grid.Row="3" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Stretch" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch">
                <StackPanel x:Name="PART_Navigation" HorizontalAlignment="Center" Margin="0" Width="Auto" Orientation="Horizontal" VerticalAlignment="Bottom">
					<tgp:GButton GIconMargin="0" BorderThickness="3"  Style="{StaticResource DefaultImageButtonStyle}" GIcon="/TGP.WindowDemo;component/Carousel/201703231056_1180x500.jpg" Margin="0" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" />
				</StackPanel>
            </Border>
        </Grid>
    </ControlTemplate>
    <!--默认的轮播控件样式-->
    <Style x:Key="DefaultCarouselStyle" TargetType="{x:Type tgp:GCarousel}">
        <Setter Property="Template" Value="{StaticResource CarouselBaseTemplate}"/>
    </Style>
</ResourceDictionary>